<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shanzhu.book.mapper.BorrowMapper">
    <resultMap id="BaseResultMap" type="com.shanzhu.book.model.Borrow">
        <id column="borrowId" jdbcType="INTEGER" property="borrowid" />
        <result column="userId" jdbcType="INTEGER" property="userid" />
        <result column="bookId" jdbcType="INTEGER" property="bookid" />
        <result column="borrowTime" jdbcType="TIMESTAMP" property="borrowtime" />
        <result column="returnTime" jdbcType="TIMESTAMP" property="returntime" />
        <result column="applyTime" jdbcType="TIMESTAMP" property="applytime" />
        <result column="borrowReason" jdbcType="VARCHAR" property="borrowreason" />
        <result column="state" jdbcType="INTEGER" property="state" />
        <result column="userName" jdbcType="VARCHAR" property="username" />
        <result column="studentId" jdbcType="VARCHAR" property="studentid" />
        <result column="bookName" jdbcType="VARCHAR" property="bookname" />
    </resultMap>

    <insert id="insert" parameterType="com.shanzhu.book.model.Borrow">
        insert into borrow (userId, bookId, applyTime, borrowReason, state, borrowTime)
        values (#{userid}, #{bookid}, NOW(), #{borrowreason}, #{state}, #{borrowtime})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.shanzhu.book.model.Borrow">
        update borrow
        <set>
            <if test="borrowtime != null"> borrowTime = #{borrowtime}, </if>
            <if test="returntime != null"> returnTime = #{returntime}, </if>
            <if test="state != null"> state = #{state}, </if>
        </set>
        where borrowId = #{borrowid}
    </update>

    <select id="selectAllByLimit" resultMap="BaseResultMap">
        SELECT b.*, u.userName, u.studentId, bk.bookName
        FROM borrow b
        LEFT JOIN user u ON b.userId = u.userId
        LEFT JOIN book_info bk ON b.bookId = bk.bookId
        <where>
            <if test="userId != null"> and b.userId = #{userId} </if>
            <if test="state != null"> and b.state = #{state} </if>
        </where>
        ORDER BY b.applyTime DESC
        <if test="begin != null and size != null">
            LIMIT #{begin}, #{size}
        </if>
    </select>

    <select id="selectCount" resultType="int">
        select count(*) from borrow
        <where>
            <if test="userId != null"> and userId = #{userId} </if>
            <if test="bookId != null"> and bookId = #{bookId} </if>
        </where>
    </select>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select * from borrow where borrowId = #{borrowid}
    </select>

    <delete id="deleteByPrimaryKey">
        delete from borrow where borrowId = #{borrowid}
    </delete>
</mapper>